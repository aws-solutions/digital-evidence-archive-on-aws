{
  "name": "@aws/dea-ui-infrastructure",
  "version": "1.0.4",
  "description": "CDK project for deploying dea-ui",
  "homepage": "https://github.com/aws-solutions/digital-evidence-archive-on-aws/blob/main/source/dea-ui/infrastructure",
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-solutions/digital-evidence-archive-on-aws/blob/main/source/dea-ui/infrastructure/README.md"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Amazon Web Services",
    "url": "http://aws.amazon.com"
  },
  "main": "lib/index.js",
  "scripts": {
    "add-license-header": "license-check-and-add add -f license-add-config.json",
    "audit:only": "",
    "build": "heft build",
    "build:clean": "heft build --clean",
    "build:test": "rushx build && rushx test && rushx make-badges",
    "cdk": "cdk",
    "cdk-deploy": "rushx build && cdk deploy --all --require-approval never --outputs-file ../ui/src/config/${STAGE}.json",
    "check-license-header": "license-check-and-add check -f license-add-config.json",
    "e2e:only": "",
    "integration:only": "heft test --no-build --disable-code-coverage --test-path-pattern '.*/*integration.test.*'",
    "license-checker": "license-checker --onlyAllow 'MIT; Apache-2.0; ISC; BSD'",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix --max-warnings=0",
    "make-badges": "istanbul-badges-readme --coverageDir=./temp/coverage --exitCode=1",
    "sort-package-json": "sort-package-json package.json",
    "test": "rushx test:only",
    "test:dev": "heft test --test-path-pattern test --watch",
    "test:noe2e": "heft test --no-build --test-path-pattern '.*/*(integration|unit).test.*' && rushx make-badges",
    "test:only": "heft test --no-build --verbose --test-path-pattern test",
    "test:only:u": "heft test -u --no-build --verbose --test-path-pattern test",
    "test:sonar": "rushx test:only",
    "unit:only": "heft test --no-build --test-path-pattern '.*/*unit.test.*'",
    "version:major": "npm version major",
    "version:minor": "npm version minor",
    "version:patch": "npm version patch",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@aws/dea-backend": "workspace:*",
    "aws-cdk": "2.85.0",
    "aws-cdk-lib": "2.85.0",
    "cheerio": "~1.0.0-rc.12",
    "constructs": "10.2.55",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@rushstack/eslint-config": "^3.3.2",
    "@rushstack/heft": "^0.50.0",
    "@rushstack/heft-jest-plugin": "^0.5.5",
    "@rushstack/heft-node-rig": "^1.12.5",
    "@types/heft-jest": "1.0.3",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.15.7",
    "@types/prettier": "2.7.2",
    "@typescript-eslint/eslint-plugin": "~5.60.0",
    "@typescript-eslint/parser": "~5.60.0",
    "eslint": "^8.43.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-security": "^1.7.1",
    "istanbul-badges-readme": "1.8.5",
    "jest": "^29.5.0",
    "license-check-and-add": "^4.0.5",
    "license-checker": "^25.0.1",
    "sort-package-json": "^2.4.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
